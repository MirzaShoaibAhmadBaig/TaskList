@model IEnumerable<TaskItem>

@{
    ViewData["Title"] = "Home Page";
}

<div class="row">
    <div class="col-md-12">
        <table class="table table-striped table-bordered">
            <thead>
                <tr>
                    <td>Task Name</td>
                    <td>Is Task Completed</td>
                    <td>Task Created</td>
                </tr>
            </thead>
            <tbody>
                @if (Model.Count() > 0)
                {

                    foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @item.TaskName

                            </td>
                            <td>
                                @item.IsCompleted.
                            </td>
                            <td>
                                @item.CreatedDate

                            </td>


                        </tr>
                    }

                }
                else
                {

                    <tr>
                        <td colspan="3" class="text-center text-capitalize">
                            No Records Found!
                        </td>
                    </tr>
                }

            </tbody>



        </table>

    </div>

</div>